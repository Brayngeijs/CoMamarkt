@model IEnumerable<CoMaMarkt.Models.Categorie>

@{
    ViewData["Title"] = "Categorieën lijst";
}

<h1>Categorieën lijst</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="LoadXml">XML laden</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naam)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Subcategorieen)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naam)
                </td>
                <td>
                    @if (item.Subcategorieen != null)
                    {
                        @foreach (var subcategorie in item.Subcategorieen)
                        {
                            <p>@subcategorie.Naam</p>
                        }
                    }

                </td>
                <td>
                    <a asp-area="CMS" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-area="CMS" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
